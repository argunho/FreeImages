
import { useEffect, useState } from "react";

// Installed
import { Navigate, useNavigate, useParams } from "react-router-dom";
import axios from "axios";
import { Button } from "@mui/material";

// Components
import Loading from "../components/Loading";
import UserForm from "../components/UserForm";

// Functions
import HeaderConfig from "../functions/HeaderConfig";

function UserFormPage({ inputs, confirmInputs, api, post }) {

    const [response, setResponse] = useState();
    const [userData, setUserData] = useState(null);
    const [loading, setLoading] = useState(false);
    const [confirm, setConfirm] = useState(false);

    const { id } = useParams();
    const navigate = useNavigate();

    useEffect(() => {
        setLoading(true);

        if (!!id) {
            (async () => {
                await axios.get(`user/${id}`, HeaderConfig).then(res => {
                    const data = res?.data;
                    console.log(data.user)
                    if (!!data)
                        setUserData(data);
                    else
                        setResponse({ alert: "error", message: "User not found!" });

                    setLoading(false);
                })
            })();
        }
        // eslint-disable-next-line react-hooks/exhaustive-deps
    }, [id])

    const deleteProfile = async () => {
        const res = await axios.delete(`user/profile/${id}`, HeaderConfig);
        setResponse(res.data);
    }

    if (loading) return <Loading />;

    return (
        <UserForm
            inputs={!!inputs ? inputs : {
                name: userData?.user.name,
                email: userData?.user.email
            }}
            heading={"Edit user: " + (!!userData ? userData?.user.name : "Unknown")}
            confirmInputs={!!inputs ? ["password", "confirmPassword"] : null}
            permission={userData?.permission}
            currentRoles={userData?.user.listRoles}
            api={api}
            post={post}
            res={response}
        >
            <div className="buttons-wrapper d-row js-end ai-end">
                <Button variant="text" color="info" onClick={() => navigate(`/sp/users/edit/password/${id}`)}>
                    Change password
                </Button>
                <Button variant="text" color="error" onClick={() => setConfirm(true)}>
                    Delete profile
                </Button>
            </div>
        </UserForm>
    );
}

export default UserFormPage;